<%= link_to "New", new_admin_availability_path %>

<table class="admin-table">
  <tr>
    <th>Date</th>
    <th>Start Time</th>
    <th>Finish Time</th>
    <th>Actions</th>
  </tr>
  <% @availabilities.each do |availability| %>
    <tr>
      <td><%= formatted_date(availability.date) %></td>
      <td><%= formatted_time(availability.start_time) %></td>
      <td><%= formatted_time(availability.finish_time) %></td>
      <td>
        <%= link_to "Edit", edit_admin_availability_path(availability) %>
        <%= link_to "Delete", admin_availability_path(availability), data: {confirm: "Are you sure you want to delete this?"}, method: :delete, class: "btn btn-small btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

